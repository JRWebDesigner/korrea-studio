<div class="fixed w-full z-50">
  <header class="bg-gradient-to-r from-blue-900 to-green-600 text-white px-4 md:px-10 py-4 w-full flex flex-col md:flex-row justify-between items-center m-auto rounded-none duration-500 transition-all ease-in-out">
    <div class="flex justify-between items-center w-full md:w-auto">
      <a href="/">
        <img src="logo.png" class="h-10" />
      </a>
      <button id="menu-toggle" class="md:hidden text-white text-3xl focus:outline-none">&#9776;</button>
    </div>
    <nav id="menu" class="hidden md:flex md:w-1/2 w-full mt-4 md:mt-0">
      <ul class="flex flex-col md:flex-row justify-around text-lg md:text-xl font-bold w-full">
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </nav>
  </header>
</div>

<style>
  li {
    transition-duration: 100ms;
  }
  li:hover {
    color: #524BE0;
  }
</style>

<script>
  if (typeof window !== 'undefined') {
    const header = document.querySelector('header');
    const menuToggle = document.getElementById('menu-toggle');
    const menu = document.getElementById('menu');

    window.addEventListener('scroll', () => {
      if (window.scrollY > 0) {
        header.classList.remove('w-full', 'rounded-none');
        header.classList.add('w-[96%]', 'rounded-b-full', 'from-blue-950', 'to-green-700');
      } else {
        header.classList.remove('w-[96%]', 'rounded-b-full', 'from-blue-950', 'to-green-700');
        header.classList.add('w-full', 'rounded-none');
      }
    });

    menuToggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
  }
</script>

